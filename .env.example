# Database
# ⚠️ ВАЖНО: Замените все пароли на сильные уникальные пароли!
POSTGRES_DB=arin
POSTGRES_USER=arin
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
TIMESCALEDB_DB=arin_ts
TIMESCALEDB_USER=arin
TIMESCALEDB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}
TIMESCALEDB_URL=postgresql://${TIMESCALEDB_USER}:${TIMESCALEDB_PASSWORD}@localhost:5433/${TIMESCALEDB_DB}
REDIS_URL=redis://localhost:6379
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# API Keys
# Приоритет: DeepSeek R1 через NVIDIA API для reasoning (лучше для финансового анализа)
NVIDIA_API_KEY=your-nvidia-api-key
# GPT-4 как fallback (опционально)
OPENAI_API_KEY=your-openai-api-key

# NVIDIA API
NVIDIA_API_KEY=your-nvidia-api-key
NVIDIA_NIM_ENDPOINT=https://integrate.api.nvidia.com/v1
NVIDIA_CUOPT_ENDPOINT=https://cuopt.api.nvidia.com/v1

# NVIDIA Models
NVIDIA_REASONING_MODEL=nvidia-nemotron-nano-9b-v2
NVIDIA_EMBEDDING_MODEL=llama-3_2-nemoretriever-300m-embed-v2
NVIDIA_RERANK_MODEL=llama-3.2-nemoretriever-500m-rerank-v2
NVIDIA_PARSE_MODEL=nemotron-parse

# Security
# ⚠️ ВАЖНО: Сгенерируйте уникальный SECRET_KEY для production!
# Используйте: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_GENERATE_STRONG_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Integrations (Optional)
